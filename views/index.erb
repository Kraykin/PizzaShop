<h2>Welcome to Pizza Shop</h2>

<div class="container">
  	<div class="row">
  		<% @products.each do |prod| %>
  		<div class="col-sm-4">
	  		<div>
	  			<%= prod.title %>
	  		</div>
	  		<div>
	  			<img src="<%= prod.path_to_image %>" class="img-thumbnail img-responsive" alt="<%= prod.title %>">
	  		</div>
	  		<div>
	  			<%= prod.description %>
	  		</div>
	  		<div>
	  			Size: <%= prod.size %> cm
	  		</div>
	  		<div>
	  			Price: <%= prod.price %> rub
	  		</div>
	  		<div>
	  			<button class="btn btn-success btn-sm" onclick="add_to_cart(<%= prod.id %>)">Add to cart</button>
	  		</div>
  		</div>
  		<% end %>
	</div>
</div>

<br /><div>
<button class="btn btn-primary" onclick="something()">Click me!</button>
</div>
