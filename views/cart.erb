<h2>Your cart</h2>

<table class="table table-hover">
	<thead>
		<tr>
			<th>#</th>
			<th>Title</th>
			<th>Price</th>
			<th>Quantity</th>
		</tr>
	</thead>
	<tbody>
		<% x = 0 %>
		<% @items.each do |item| %>
			<tr>
				<td><%= x += 1 %></td>
				<td><%= item[0].title %></td>
				<td><%= item[0].price %></td>
	  			<td><%= item[1] %></td>
	  		</tr>
	  	<% end %>
	</tbody>
</table>