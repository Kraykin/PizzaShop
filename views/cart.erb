<h2>Your cart</h2>

<table class="table table-hover">
	<thead>
		<tr>
			<th>#</th>
			<th>Title</th>
			<th>Price</th>
			<th>Quantity</th>
		</tr>
	</thead>
	<tbody>
		<% x = 0 %>
		<% total_price = 0 %>
		<% total_qty = 0 %>
		<% @items.each do |item| %>
			<tr>
				<td><%= x += 1 %></td>
				<td><%= item[0].title %></td>
				<td><%= item[0].price %></td>
	  			<td><%= item[1] %></td>
	  		</tr>
	  		<% total_price += item[0].price * item[1].to_i %>
	  		<% total_qty += item[1].to_i %>
	  	<% end %>
	</tbody>
	<tfoot>
		<tr>
			<td></td>
			<td>Total:</td>
			<td><%= total_price %></td>
  			<td><%= total_qty %></td>
  		</tr>
	</tfoot>
</table>